@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@*<h1>Register</h1>*@
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>

                <div asp-validation-summary="All" class="text-danger mt-2"></div>

                <form asp-action="Register" method="POST" class="register-form" id="register-form">
                   
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" id="email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" id="pass" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                    </div>
                    <div class="form-group">
                        <input asp-for="IsAgree" id="agree-term" class="agree-term" />
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/files/images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-controller="Account" asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>

@section ValidationScriptSection
    {
    <partial name="_ValidationScriptsPartial" />
}