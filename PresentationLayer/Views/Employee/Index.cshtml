@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}


<h1>All Employees</h1>
<br />
<br />

<form asp-action="Index" >
    <div class="row align-items-center justify-content-center">
        <div class="col-8">
            <input type="text" placeholder="Search By Name" class="form-control" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success"/>
        </div>
    </div>
</form>


<a  asp-action="Create" class="btn btn-primary mt-2"><i class="fas fa-add"></i> Create New Department</a>
<br />

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success my-3">
        @TempData["Message"]
    </div>

}

@if (Model.Count() > 0)
{
    <table class="table mt-4 table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Name )</th>
                <th>@Html.DisplayNameFor(E=>E.Age )</th>
                <th>@Html.DisplayNameFor(E=>E.Address )</th>
                <th>@Html.DisplayNameFor(E=>E.Department )</th>
                <th>@Html.DisplayNameFor(E=>E.Salary )</th>
                <th>@Html.DisplayNameFor(E=>E.IsActive )</th>
                <th>@Html.DisplayNameFor(E=>E.Email )</th>
                <th>@Html.DisplayNameFor(E=>E.Phone )</th>
                <th>@Html.DisplayNameFor(E=>E.HireDate )</th>
               
                <th>Datails</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(M=>employee.Name) </td>
                    <td>@Html.DisplayFor(M=>employee.Age) </td>
                    <td>@Html.DisplayFor(M=>employee.Address) </td>
                   @* <td>
                        <img src="~/files/images/@employee.ImageName" alt="Employee Image" class=""/>
                    </td>*@
                    <td>@Html.DisplayFor(M=>employee.Department.Name) </td>
                    <td>@Html.DisplayFor(M=>employee.Salary) </td>
                    <td>@Html.DisplayFor(M=>employee.IsActive) </td>
                    <td>@Html.DisplayFor(M=>employee.Email) </td>
                    <td>@Html.DisplayFor(M=>employee.Phone) </td>
                    <td>@Html.DisplayFor(M=>employee.HireDate) </td>
                   
                    <partial name="_ButtonsPartailView" model="@employee.Id.ToString()"/>



                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Employees</h3>
    </div>
}

@section ValidationScriptSection
    {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}