@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<h1>Update User</h1>


<form asp-action="Edit">

    <input asp-for="Id" hidden >

    <div class="form-group">
        <label class="col-form-label" asp-for="UserName"></label>
        <input type="text" class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <input type="submit"  value="Save" class="btn btn-success " />
    
    <a asp-action="Index" class="btn btn-primary mt-1"> <i class="fas fa-arrow-left"></i> Back To List</a>

</form>


@section ValidationScriptSection
    {
    <partial name="_ValidationScriptsPartial" />
}